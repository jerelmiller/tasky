$base-header
  font-weight: 300

$base-input
  width: 100%
  box-sizing()
  outline: 0
  border: 1px solid #CCC
  margin: 0
  padding: 15px
  font-size: 1em
  font-weight: 300

html
body
  font: $app-font-size $app-font-family
  padding: 0
  margin: 0
  height: 100%
  color: $app-text-color
  font-weight: 300

a
  text-decoration: none

input[type='text']
  @extends $base-input
  &.large
    padding: 18.5px 15px

textarea
  @extend $base-input
  min-height: 100px

h1
  @extends $base-header
  font-size: $h1-size
h2
  @extends $base-header
  font-size: $h2-size
h3
  @extends $base-header
  font-size: $h3-size
h4
  @extends $base-header
  font-size: $h4-size
h5
  @extends $base-header
  font-size: $h5-size
h6
  @extends $base-header
  font-size: $h6-size

i
  + i
    margin-left: 10px
