$task-action-size = 70px
$task-standard-padding = 15px 60px 15px $task-action-size + 20px

.task
  margin-bottom: 20px
  border: 1px solid lighten($gray, 80%)
  padding: $task-standard-padding
  position: relative
  overflow: hidden

  input, textarea, button
    display: none

  &:first-child
    margin-top: 20px

  &.grow
    padding: 0 20px 0 $task-action-size + 20px
    margin-bottom: 0
    border: 0

    &.in
      padding: $task-standard-padding
      max-height: 82px
      margin-bottom: 20px
      border: 1px solid lighten($gray, 80%)

  &.slide
    transform(translateX(-100%))

  &.edit-mode
    max-height: 192px !important
    padding: 0 0 0 $task-action-size !important

    input, textarea, button
      display: inherit

    input, textarea
      border: none
      border-bottom: 1px solid #CCC

    button
      margin-top: -3px

    .task-actions
      opacity: 0

    .task-title, .task-description
      display: none

.task-description
  font-size: 0.9em
  font-weight: 300
  font-style: italic

.task-actions
  position: absolute
  top: 5px
  right: 10px
  opacity: 1
  transition(opacity 0.5s)

  i
    cursor: pointer

.task-action
  width: $task-action-size
  position: absolute
  left: 0
  top: 0
  bottom: 0
  position: absolute
  color: white;
  cursor: pointer
  border-right: 1px solid lighten($gray, 80%)
  box-sizing()

  &:after
    position: absolute;
    top: 50%;
    transform translateY(-50%)
    font-size: 2em
    width: 100%
    text-align: center
    font-family: 'Flat-UI-Icons'

  [class*="fui-"]
    font-size: 2.8em

  &:hover
    background: $teal
    &:after
      content: "\e00a"

  &.finished
    background: $teal
    &:after
      content: "\e00a"

    &:hover
      background: $red
      &:after
        content: "\e00b"

.create-task
  overflow: hidden
  max-height: 95px !important

  &.in
    max-height: 257px !important

  .add-task
    font-size: 1.9em
    padding: 20px
    background: $teal
    color: #FFF
    float: left
    position: relative
    z-index: 999
    cursor: pointer

    + input
      font-size: 1.25em
      width: 650px
      padding: 24px 15px
      border-left: 0
      transform(translateX(-100%))

  .textarea-container
    overflow-y: hidden

  textarea
    border-top: 0
    transform(translateY(-100%))

  button
    margin: 20px 0

.no-tasks
  font-size: 2.3em
  color: #CCC
  font-weight: 300
  margin-top: 20px
  text-align: center

.cancel-task-button
  margin-left: 10px !important

.input-with-icon
  position: relative
  [class*='fui-']
    position: absolute
    right: 10px
    top: 13px
    color: $gray
    font-size: 1.2em