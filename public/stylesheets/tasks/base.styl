$task-action-size = 70px

.task
  margin-bottom: 20px
  border: 1px solid lighten($gray, 80%)
  padding: 20px 20px 20px $task-action-size + 20px
  position: relative;
  &:first-child
    margin-top: 20px

.task-description
  font-size: 0.9em
  font-weight: 300
  font-style: italic

.task-action
  width: $task-action-size
  position: absolute
  left: 0
  top: 0
  bottom: 0
  position: absolute
  color: white;
  cursor: pointer
  border-right: 1px solid lighten($gray, 80%)
  box-sizing()

  &:after
    position: absolute;
    top: 50%;
    transform translateY(-50%)
    font-size: 2em
    width: 100%
    text-align: center
    font-family: 'Flat-UI-Icons'

  [class*="fui-"]
    font-size: 2.8em

  &:hover
    background: $teal
    &:after
      content: "\e00a"

  &.finished
    background: $teal
    &:after
      content: "\e00a"

    &:hover
      background: $red
      &:after
        content: "\e00b"

.create-task
  overflow-x: hidden
  max-height: 100px

  &.in
    margin-bottom: 20px

  .add-task
    font-size: 1.9em
    padding: 20px
    background: $teal
    color: #FFF
    float: left
    position: relative
    z-index: 999
    cursor: pointer

    + input
      font-size: 1.25em
      width: 650px
      padding: 24px 15px
      border-left: 0
      transform(translateX(-100%))

  .textarea-container
    overflow-y: hidden

  textarea
    border-top: 0
    transform(translateY(-100%))

  button
    margin-top: 20px