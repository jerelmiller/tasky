$base-button
  padding: 10px 20px
  border: 1px solid $red
  background: none
  color: $red
  display: inline-block
  border-radius(3px)
  transition(all 0.2s ease)
  font-size: 1em
  font-weight: 300
  box-sizing()

  &.large
    font-size: 1.3em
    padding: 15px 30px

  &:hover
    background: $red
    color: white

  &.green
    border: 1px solid $teal
    color: $teal

    &:hover
      background: $teal
      color: white

.centered-button-container
  text-align: center

.button
  @extends $base-button

button
  @extends $base-button
  font-family: $app-font-family
  margin: 0
  cursor: pointer
  &:focus
    outline: 0